<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp"
    android:padding="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageperfil"
        android:layout_width="79dp"
        android:layout_height="73dp"
        android:scaleType="centerCrop"
        android:src="@drawable/perfilmed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true" />
    <View
        android:id="@+id/vieww"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/imageperfil"
        app:layout_constraintEnd_toEndOf="@id/imageperfil"
        app:layout_constraintStart_toStartOf="@id/imageperfil"
        app:layout_constraintTop_toTopOf="@id/imageperfil"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Samanta Gisel Lara Flores"
        android:textSize="12.5dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageperfil"
        app:layout_constraintTop_toTopOf="@id/vieww" />
    <TextView
        android:id="@+id/clavetxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Clave:"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/imageperfil"
        app:layout_constraintTop_toTopOf="@id/vieww"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="01345743SG"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@id/clavetxt"
        app:layout_constraintStart_toEndOf="@id/clavetxt"
        app:layout_constraintTop_toTopOf="@id/clavetxt" />

</androidx.constraintlayout.widget.ConstraintLayout>

